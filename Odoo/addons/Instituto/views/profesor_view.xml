<odoo>
    <!-- Aqui se hace un formulario para crear nuevos profesores -->
    <record id="view_profesor_form" model="ir.ui.view">
        <field name="name">instituto.profesor.form</field>
        <field name="model">instituto.profesor</field>
        <field name="arch" type="xml">
            <form string="Profesor">
                <sheet>
                    <group>
                        <!-- Atributos para crear profesores -->
                        <field name="name"/>
                        <field name="departamento"/>
                        <field name="numero_colegiado"/>
                    </group>
                    <group>
                        <!-- Es un atributo para añadir modulos a los profesores, se ven de la forma many2many -->
                        <field name="modulo_ids" widget="many2many_tags" string="Módulos que imparte"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Aqui se hace la visualización en lista -->
    <record id="view_profesor_list" model="ir.ui.view">
        <field name="name">instituto.profesor.list</field>
        <field name="model">instituto.profesor</field>
        <field name="arch" type="xml">
            <list string="Profesores">
                <!-- Atributos que se ven en la lista -->
                <field name="name"/>
                <field name="departamento"/>
            </list>
        </field>
    </record>

    <!-- Aqui se determina lo que va haber en la vista que es un form y una list -->
    <record id="action_profesor" model="ir.actions.act_window">
        <field name="name">Profesores</field>
        <field name="res_model">instituto.profesor</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Aqui creamos el boton del menu de arriba para cambiar entre vistas -->
    <menuitem id="menu_instituto_profesores" name="Profesores" parent="menu_instituto_root" action="action_profesor"/>
</odoo>
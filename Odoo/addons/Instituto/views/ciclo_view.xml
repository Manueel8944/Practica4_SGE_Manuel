<odoo>
    <!-- Aqui se hace un formulario para crear nuevos ciclos -->
    <record id="view_ciclo_form" model="ir.ui.view">
        <field name="name">instituto.ciclo.form</field>
        <field name="model">instituto.ciclo</field>
        <field name="arch" type="xml">
            <form string="Ciclo Formativo">
                <sheet>
                    <!-- Atributos para crear ciclo -->
                    <group>
                        <field name="name"/>
                        <field name="descripcion"/>
                    </group>
                    <!-- Esto es para poder crear un nuevo modulo desde el ciclo que estemos creando o editando -->
                    <notebook>
                        <page string="Módulos">
                            <field name="modulo_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="codigo"/>
                                    <field name="profesor_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Aqui se hace la visualización en lista -->
    <record id="view_ciclo_list" model="ir.ui.view">
        <field name="name">instituto.ciclo.list</field>
        <field name="model">instituto.ciclo</field>
        <field name="arch" type="xml">
            <list string="Ciclos">
                <!-- Atributos que se ven en la lista, el many2many_tags es una forma de visualizacion sencilla para poder ver varias modulos en un ciclo -->
                <field name="name"/>
                <field name="modulo_ids" widget="many2many_tags"/>
            </list>
        </field>
    </record>

    <!-- Aqui se determina lo que va haber en la vista que es un form y una list -->
    <record id="action_ciclo" model="ir.actions.act_window">
        <field name="name">Ciclos formativos</field>
        <field name="res_model">instituto.ciclo</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Aqui creamos el boton del menu de arriba para cambiar entre vistas -->
    <menuitem id="menu_instituto_root" name="Instituto"/>
    <menuitem id="menu_instituto_ciclos" name="Ciclos formativos" parent="menu_instituto_root" action="action_ciclo"/>
</odoo>
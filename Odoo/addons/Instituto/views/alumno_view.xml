<odoo>
    <!-- Aqui se hace un formulario para crear nuevos alumnos -->
    <record id="view_alumno_form" model="ir.ui.view">
        <field name="name">instituto.alumno.form</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <form string="Alumno">
                <sheet>
                    <group>
                        <!-- Atributos para crear alumnos -->
                        <field name="name"/>
                        <field name="dni"/>
                        <field name="fecha_nacimiento"/>
                    </group>
                    <group>
                        <!-- Es un atributo para añadir modulos a los alumnos, se ven de la forma many2many -->
                        <field name="modulo_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Aqui se hace la visualización en lista -->
    <record id="view_alumno_list" model="ir.ui.view">
        <field name="name">instituto.alumno.list</field>
        <field name="model">instituto.alumno</field>
        <field name="arch" type="xml">
            <list string="Alumnos">
                <!-- Atributos que se ven en la lista -->
                <field name="name"/>
                <field name="dni"/>
            </list>
        </field>
    </record>

    <!-- Aqui se determina lo que va haber en la vista que es un form y una list -->
    <record id="action_alumno" model="ir.actions.act_window">
        <field name="name">Alumnos</field>
        <field name="res_model">instituto.alumno</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Aqui creamos el boton del menu de arriba para cambiar entre vistas -->
    <menuitem id="menu_instituto_alumnos" name="Alumnos" parent="menu_instituto_root" action="action_alumno"/>
</odoo>
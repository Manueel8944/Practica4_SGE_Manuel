<odoo>
     <!-- Aqui se hace un formulario para crear nuevos modulos -->
    <record id="view_modulo_form" model="ir.ui.view">
        <field name="name">instituto.modulo.form</field>
        <field name="model">instituto.modulo</field>
        <field name="arch" type="xml">
            <form string="Módulo">
                <sheet>
                    <group>
                        <!-- Atributos para crear modulos -->
                        <field name="name"/>
                        <field name="codigo"/>
                    </group>
                    <group>
                        <!-- Atributos para crear modulos que son relaciones -->
                        <field name="ciclo_id"/>
                        <field name="profesor_id"/>
                    </group>
                    <group>
                        <!-- Es un atributo para añadir alumnos a los modulos, se ven de la forma many2many -->
                        <field name="alumno_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Aqui se hace la visualización en lista -->
    <record id="view_modulo_list" model="ir.ui.view">
        <field name="name">instituto.modulo.list</field>
        <field name="model">instituto.modulo</field>
        <field name="arch" type="xml">
            <list string="Módulos">
                <!-- Atributos que se ven en la lista -->
                <field name="name"/>
                <field name="codigo"/>
                <field name="ciclo_id"/>
                <field name="profesor_id"/>
            </list>
        </field>
    </record>

    <!-- Aqui se determina lo que va haber en la vista que es un form y una list -->
    <record id="action_modulo" model="ir.actions.act_window">
        <field name="name">Módulos</field>
        <field name="res_model">instituto.modulo</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Aqui creamos el boton del menu de arriba para cambiar entre vistas -->
    <menuitem id="menu_instituto_modulos" name="Módulos" parent="menu_instituto_root" action="action_modulo"/>
</odoo>